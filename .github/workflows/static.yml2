  <!-- JavaScript Event Triggers -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      // Shop Now Button
      const shopNowBtn = document.getElementById('shop-now-btn');
      if (shopNowBtn) {
        shopNowBtn.addEventListener('click', () => {
          alert('Redirecting to the shop page!');
          window.location.href = '/shop'; // Update to actual shop URL
          console.log('Shop Now clicked:', new Date().toLocaleString());
        });
      }

      // Contact Form Submission
      const contactForm = document.getElementById('contact-form');
      if (contactForm) {
        contactForm.addEventListener('submit', (event) => {
          event.preventDefault();
          const formData = new FormData(event.target);
          fetch('/', {
            method: 'POST',
            body: formData
          })
            .then(() => {
              alert('Message sent successfully!');
              event.target.reset();
            })
            .catch(error => {
              console.error('Form submission error:', error);
              alert('Error submitting form. Please try again.');
            });
        });
      }

      // Address Click (Open Google Maps)
      const storeAddress = document.getElementById('store-address');
      if (storeAddress) {
        storeAddress.addEventListener('click', () => {
          const address = encodeURIComponent('Khiriband, Bhagalpur, Bihar 812005, India');
          window.open(`https://www.google.com/maps/search/?api=1&query=${address}`, '_blank');
          console.log('Address clicked:', new Date().toLocaleString());
        });
      }

      // Testimonials Carousel
      const testimonials = document.querySelectorAll('#testimonial-carousel .testimonial');
      const prevBtn = document.getElementById('prev-testimonial');
      const nextBtn = document.getElementById('next-testimonial');
      let currentTestimonial = 0;

      function showTestimonial(index) {
        testimonials.forEach((testimonial, i) => {
          testimonial.style.display = i === index ? 'block' : 'none';
        });
      }

      if (prevBtn && nextBtn) {
        nextBtn.addEventListener('click', () => {
          currentTestimonial = (currentTestimonial + 1) % testimonials.length;
          showTestimonial(currentTestimonial);
          console.log('Next testimonial:', currentTestimonial);
        });

        prevBtn.addEventListener('click', () => {
          currentTestimonial = (currentTestimonial - 1 + testimonials.length) % testimonials.length;
          showTestimonial(currentTestimonial);
          console.log('Previous testimonial:', currentTestimonial);
        });
      }
    });
  </script>
